.c-icon-button
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  border-radius 3px
  background-color transparent
  transition background-color .3s ease-in-out
  padding .5rem
  cursor pointer
  border none

  &:hover
    background-color rgba(#000, .1)

  &__label
    font-size 12px
    text-transform uppercase
    color $WB_DARK_GREY_1
    margin-left .5rem