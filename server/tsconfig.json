{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist/",
        "baseUrl": "./source",
        "moduleResolution": "node",
        "paths": {
            "@server/*": ["*"],
            "@env/*": ["../../shared/@env/*"],
            "@shared/*": ["../../shared/@shared/*"]
        }
    },
    "include": [
        "./source/**/*"
    ]
}